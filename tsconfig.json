{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
